<mujoco model="fr3_on_table">
    <compiler angle="radian" meshdir="mj_assets" autolimits="true" inertiafromgeom="auto" inertiagrouprange="4 4"/>
    <statistic center="0.3 0 0.4" extent="1"/>
    <option integrator="implicitfast"/>

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <global azimuth="120" elevation="-20"/>
    </visual>

    <asset>
        <include file="./table_assets.xml"/>
        <include file="./fr3_assets.xml"/>
    </asset>

    <default>
        <include file="./table_default.xml"/>
        <include file="./fr3_default.xml"/>
    </default>

    <worldbody>
        <light name="top" pos="0 0 2" mode="trackcom"/>
        <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>

        <include file="./table_body.xml"/>
        <include file="./fr3_on_table_with_bounding_boxes_flying_ball_body.xml"/>

        <body name="ball" pos="0.0 0.0 2.0">
            <geom name="ball" type="sphere" size=".05" rgba=".65 .81 .55 1" friction=".30"/>
            <inertial mass="1.0" diaginertia="0.012 0.012 0.012" pos="0 0 0"/>
            <joint type="free" stiffness="0" damping="0.0" frictionloss="0.0" armature="0"/>
        </body>

    </worldbody>

    <include file="./fr3_motors.xml"/>

    <keyframe>
        <key name="home" qpos="0 0 0 -1.57079 0 1.57079 -0.7853 0.04 0.04 0 0 0 0 0 0 0" 
            ctrl="0 0 0 -1.57079 0 1.57079 -0.7853 255"/>
    </keyframe>

</mujoco>